<div class="post-sec">
  <section class= "post-display">
    <div>
     <img src="<%= @user.photo %>" alt="image">
    </div>

  <div>
    <h2>
      <%= @user.name%>
    </h2>
    <p>
      Number of posts: <%= @user.posts_counter || 0%>
    </p>
  </div> 

  <div>
    <% @user.bio %>
  </div>

  </section>

  <section class="flex flex-col gap-4">
    <% @posts.each do |post| %>
      <%= render partial: 'post', locals: {post: post} %>
    <% end %>
    <%= link_to new_user_post_path(id: @user.id), class: 'flex w-full justify-center' do %>
  <button class="border-2 w-40 self-center cursor">Create post</button>
  <%end%>
  </section>    
</div>  
