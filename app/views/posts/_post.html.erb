<%= link_to user_post_path(@user, id: post.id), class: 'post' do %>
    <p class="text-sm">Post #<%= post.id %></p>
    <p><%= post.text %></p>
    <p class="self-end text-xs">
        <span>
          Comments: <%= post.comments_counter || 0 %>,
          Likes: <%= post.likes_counter || 0 %>
        </span>
    </p>
<% end %>