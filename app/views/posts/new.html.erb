<section class='post-form-sec'>
<h3 class='add-post-head'>Add new post</h3>
<%= form_with model: @new_post, url: user_posts_url, method: :post, class: 'post-form' do |form| %>
      <%= form.label :title %>
      <%= form.text_field :title %>      
      <%= form.label :text, class: 'mt-4' %>
      <%= form.text_area :text %>      
      <%= form.submit "Add post", class: 'add-post-btn' %>
<% end %> 
</section>